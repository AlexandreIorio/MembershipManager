<Window x:Class="MembershipManager.View.Buyable.ProductDetailWindows"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MembershipManager.View.Buyable"
      mc:Ignorable="d" 
      Title="ProductDetailWindows" Style="{StaticResource Detail}" WindowStartupLocation="CenterScreen" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Détail du produit" Style="{StaticResource LabelTitle}"/>
        <Frame Grid.Row="1" x:Name="MainFrame" Source="PersonDetail.xaml"/>
        <WrapPanel Grid.Row="2">
            <Button x:Name="ButtonSave" Content="Enregistrer" IsDefault="True" Click="ButtonSave_Click"/>
            <Button x:Name="ButtonCancel"  Content="Annuler" IsCancel="True"/>
        </WrapPanel>
    </Grid>
</Window>
