<Window x:Class="MembershipManager.View.Utils.ListSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MembershipManager.View.Utils.UserControls"
      mc:Ignorable="d"
      Title="ListSelection" Width="400" MinWidth="300" Height="Auto" MinHeight="400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="Title" Style="{StaticResource LabelTitle}">Selection</Label>
        <Frame Grid.Row="1" x:Name="FrameList"/>
        <StackPanel x:Name="StackPanelButtons" Grid.Row="3">

            <Button x:Name="BtnSelect" 
                    Content="Sélectionner" 
                    IsDefault="True" />

            <Button x:Name="BtnCancel" 
                    Content="Annuler" 
                    IsCancel="True" />

        </StackPanel>
    </Grid>
</Window>
